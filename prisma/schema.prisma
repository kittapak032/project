// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ตาราง User
model User {
  user_id   Int         @id @default(autoincrement())
  username  String
  address   String
  email     String
  borrowing Borrowing[]
}

model Book {
  book_id   Int         @id @default(autoincrement())
  title     String
  author    String
  genre     String
  available Boolean
  borrowing Borrowing[]
}

model Borrowing {
  borrowing_id Int      @id @default(autoincrement())
  user_id      Int      @unique
  book_id      Int
  comic_id     Int
  DateBorrowed DateTime
  datedue      DateTime
  user         User     @relation(fields: [user_id], references: [user_id])
  book         Book     @relation(fields: [book_id], references: [book_id])
  comic        Comic    @relation(fields: [comic_id], references: [comic_id])
}

model Comic {
  comic_id  Int         @id @default(autoincrement())
  title     String
  author    String
  genre     String
  available Boolean
  borrowing Borrowing[]
}
